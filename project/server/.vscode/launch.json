{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "env": { "NODE_ENV": "testing"},
            "args": ["-r", "ts-node/register", "-r", "tsconfig-paths/register", "test/**/*.test.ts"],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        }
    ],
    "compounds": []
}