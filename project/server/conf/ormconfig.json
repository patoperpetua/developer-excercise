[
  {
    "name": "file-db",
    "type": "sqlite",
    "host": "localhost",
    "database": "./data/kinesis-exercise.sqlite",
    "synchronize": true,
    "loggerLevel": "warn",
    "logging": {
      "logQueries": true,
      "logFailedQueryError": true
    },
    "debug": "true",
    "options": {
      "encrypt": true
    },
    "cli": {
        "entitiesDir": "src/databases/entities",
        "migrationsDir": "src/databases/migrations",
        "subscribersDir": "src/databases/subscribers"
    }
  },
  {
      "name": "memory-db",
      "type": "sqlite",
      "database": ":memory:",
      "synchronize": true,
      "loggerLevel": "debug",
      "logging": {
        "logQueries": true,
        "logFailedQueryError": true
      }
  }
  
]